{
  "manifest_version": 2,

  "name": "Fake News Alerter",
  "description": "This extension alerts you when a link has been flagged as fake news and allows you to submit a URL as a fake news article.",
  "version": "0.1",
  "icons": { "128": "images/icon.png" },

  "background": {
    "scripts": ["assets/js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Fake News Alerter"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
